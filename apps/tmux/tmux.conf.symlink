# === Remote Dev Config ===

# Mouse support
set -g mouse on

# macOS clipboard integration
set -g set-clipboard on
bind-key -T copy-mode MouseDragEnd1Pane send-keys -X copy-pipe-and-cancel "pbcopy"
bind-key -T copy-mode-vi MouseDragEnd1Pane send-keys -X copy-pipe-and-cancel "pbcopy"

# Vi mode for copy (optional but useful)
setw -g mode-keys vi
bind-key -T copy-mode-vi v send-keys -X begin-selection
bind-key -T copy-mode-vi y send-keys -X copy-pipe-and-cancel "pbcopy"

# Increase scrollback
set -g history-limit 50000

# Start windows at 1 (easier keyboard nav)
set -g base-index 1
setw -g pane-base-index 1

# Quick window switching (Alt+number)
bind-key -n M-1 select-window -t 1
bind-key -n M-2 select-window -t 2
bind-key -n M-3 select-window -t 3
bind-key -n M-4 select-window -t 4
bind-key -n M-5 select-window -t 5
bind-key -n M-6 select-window -t 6
bind-key -n M-7 select-window -t 7
bind-key -n M-8 select-window -t 8
bind-key -n M-9 select-window -t 9

# Layout shortcuts
bind-key P run-shell "~/bin/dev-panes"
bind-key W run-shell "~/bin/dev-windows"

# Renumber windows when one is closed
set -g renumber-windows on

# Better colors
set -g default-terminal "screen-256color"

# Faster escape time (better for vim/Claude)
set -sg escape-time 10
